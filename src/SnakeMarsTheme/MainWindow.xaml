<Window x:Class="SnakeMarsTheme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SnakeMarsTheme.ViewModels"
        Title="SnakeMarsTheme v1.0 - Theme Manager" 
        Height="800" Width="1400"
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource BackgroundDarkBrush}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="🎨 SnakeMarsTheme" 
                           Foreground="{StaticResource AccentCyanBrush}"
                           FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" Text="Theme Manager for Mars Gaming VMAX" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="14" VerticalAlignment="Center" Margin="20,0,0,0"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="v1.0" Foreground="{StaticResource AccentGreenBrush}" 
                               FontWeight="Bold" Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Tab 1: Theme Browser -->
            <TabItem Header="📂 Mis Temas">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Theme List -->
                    <Border Grid.Column="0" Background="{StaticResource BackgroundMediumBrush}" 
                            CornerRadius="8" Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Margin="15,15,15,10">
                                <TextBlock Text="Temas Locales" 
                                           Foreground="{StaticResource AccentCyanBrush}"
                                           FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Themes.Count, StringFormat='{}{0} temas'}" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <ListBox Grid.Row="1" Margin="10,0,10,10"
                                     ItemsSource="{Binding Themes}"
                                     SelectedItem="{Binding SelectedTheme}"
                                     Background="{StaticResource BackgroundLightBrush}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontWeight="SemiBold"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock Text="{Binding Resolution}" 
                                                           Foreground="{StaticResource AccentCyanBrush}"
                                                           FontSize="11"/>
                                                <TextBlock Text=" • " 
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="11"/>
                                                <TextBlock Text="{Binding TypeName}" 
                                                           Foreground="{StaticResource AccentOrangeBrush}"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <StackPanel Grid.Row="2" Margin="10">
                                <Button Content="+ Crear Tema" 
                                        Command="{Binding CreateThemeCommand}"
                                        Background="{StaticResource AccentGreenBrush}"
                                        Foreground="#000000" Margin="0,5"/>
                                <Button Content="↻ Actualizar"
                                        Command="{Binding RefreshThemesCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Preview Panel -->
                    <Border Grid.Column="1" Background="{StaticResource BackgroundMediumBrush}" 
                            CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Vista Previa" 
                                       Foreground="{StaticResource AccentCyanBrush}"
                                       FontSize="16" FontWeight="Bold" Margin="15"/>
                            
                            <Border Grid.Row="1" Background="#000000" Margin="15,0"
                                    CornerRadius="4">
                                <Grid>
                                    <TextBlock Text="Selecciona un tema"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding PreviewImage, Converter={x:Null}, FallbackValue=Visible}"/>
                                    <Image Source="{Binding PreviewImage}" 
                                           Stretch="Uniform" Margin="10"/>
                                </Grid>
                            </Border>
                            
                            <Border Grid.Row="2" Background="{StaticResource BackgroundLightBrush}"
                                    CornerRadius="4" Margin="15" Padding="15">
                                <TextBlock Text="{Binding ThemeDetails}" 
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontFamily="Consolas"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Tab 2: Theme Wizard -->
            <TabItem Header="🧙 Crear Tema">
                <views:WizardView xmlns:views="clr-namespace:SnakeMarsTheme.Views"/>
            </TabItem>
            
            <!-- Tab 3: Visual Editor -->
            <TabItem Header="🎨 Editor Visual">
                <views:ThemeEditorView xmlns:views="clr-namespace:SnakeMarsTheme.Views"/>
            </TabItem>
            
            <!-- Tab 4: Downloads -->
            <TabItem Header="⬇️ Descargar">
                <views:DownloaderView xmlns:views="clr-namespace:SnakeMarsTheme.Views"/>
            </TabItem>
            
            <!-- Tab 5: Settings -->
            <TabItem Header="⚙️ Configuracion">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,20,0">
                            <!-- Paths Section -->
                            <Border Background="{StaticResource BackgroundMediumBrush}" 
                                    CornerRadius="8" Padding="20" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="📁 Rutas de Instalación" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource AccentCyanBrush}" 
                                               Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="Carpeta de recursos:" 
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               FontSize="12" Margin="0,0,0,5"/>
                                    <TextBox Text="D:\REPOS_GITHUB\SnakeMarsTheme\resources" 
                                             IsReadOnly="True" FontSize="12" Padding="10,8" Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="SOEYI (si está instalado):" 
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               FontSize="12" Margin="0,0,0,5"/>
                                    <TextBox Text="C:\Program Files (x86)\SOEYI" 
                                             IsReadOnly="True" FontSize="12" Padding="10,8" Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="Mars Gaming (si está instalado):" 
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               FontSize="12" Margin="0,0,0,5"/>
                                    <TextBox Text="C:\Program Files (x86)\Mars Gaming" 
                                             IsReadOnly="True" FontSize="12" Padding="10,8"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- About Section -->
                            <Border Background="{StaticResource BackgroundMediumBrush}" 
                                    CornerRadius="8" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="ℹ️ Acerca de" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource AccentCyanBrush}" 
                                               Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="SnakeMarsTheme v4.0" 
                                               FontSize="16" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Theme Manager for Mars Gaming VMAX" 
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               Margin="0,5,0,15"/>
                                    
                                    <TextBlock Text="Desarrollado por SnakeFoxu" 
                                               Foreground="{StaticResource AccentGreenBrush}"/>
                                    <TextBlock Text="2024-2025" 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Right Column -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="20,0,0,0">
                            <!-- Tools Section -->
                            <Border Background="{StaticResource BackgroundMediumBrush}" 
                                    CornerRadius="8" Padding="20" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="🔧 Herramientas" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource AccentCyanBrush}" 
                                               Margin="0,0,0,15"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="7-Zip:" Width="120" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="✓ Instalado" 
                                                   Foreground="{StaticResource AccentGreenBrush}" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text=".NET Runtime:" Width="120" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="8.0" 
                                                   Foreground="{StaticResource AccentCyanBrush}" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <Button Content="📂 Abrir carpeta de recursos" 
                                            Command="{Binding OpenResourcesFolderCommand}"
                                            Padding="15,10" Margin="0,10,0,5"/>
                                    <Button Content="🗑️ Limpiar caché de previews" 
                                            Command="{Binding ClearPreviewCacheCommand}"
                                            Padding="15,10"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Statistics Section -->
                            <Border Background="{StaticResource BackgroundMediumBrush}" 
                                    CornerRadius="8" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="📊 Estadísticas" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource AccentCyanBrush}" 
                                               Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Temas locales:" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="18" 
                                                   Foreground="{StaticResource AccentCyanBrush}" FontWeight="Bold"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Temas descargados:" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="0" 
                                                   Foreground="{StaticResource AccentOrangeBrush}" FontWeight="Bold" Margin="0,5,0,0"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Widgets disponibles:" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="70+" 
                                                   Foreground="{StaticResource AccentGreenBrush}" FontWeight="Bold" Margin="0,5,0,0"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Resoluciones:" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="17" 
                                                   Foreground="{StaticResource AccentCyanBrush}" FontWeight="Bold" Margin="0,5,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="10,0">
                <TextBlock Text="{Binding StatusText}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="By SnakeFoxu" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
